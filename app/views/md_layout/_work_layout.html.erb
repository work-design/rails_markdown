<section class="hero is-medium">
  <div class="hero-body container is-fullwidth">
    <%= item[:header]&.html_safe %>
    <div data-controller="enter-section" data-enter-section-target="children" class="cards is-animate-scale is-<%= [3, 4].min_by(&->(i){ item[:items].size.modulo(i) }) %>">
      <%= render partial: 'md_layout/work_card', collection: item[:items].delete_if(&->(i){ i.is_a?(Array) }), as: :item %>
    </div>
  </div>
</section>

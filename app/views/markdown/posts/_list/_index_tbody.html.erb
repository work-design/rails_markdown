<td>
<% if model.ppt %>
  <%= link_to(action: 'ppt', slug: model.slug) do %>
    <span><%= model.title %></span>
    <i class="fa-light fa-clapperboard-play text-grey-dark"></i>
  <% end %>
<% else %>
  <%= link_to model.title, { action: 'raw', slug: model.slug } %>
<% end %>
</td>
<td class="text-right">
  <time data-controller="time"><%= model.updated_at.to_fs(:iso8601) %></time>
</td>
<td>
  <span data-show-target="item" class="visibility-hidden"></span>
</td>

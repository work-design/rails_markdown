<% if @catalog %>
  <% @catalog.ancestors.each do |catalog| %>
    <% if catalog.path.present? %>
      <li><%= link_to catalog.name, { action: 'show', slug: catalog.path } %></li>
    <% else %>
      <li><%= link_to catalog.name, { action: 'index' } %></li>
    <% end %>
  <% end %>
  <li data-id="<%= @catalog.id %>" class="is-active"><%= @catalog.name %></li>
<% else %>
  <li><%= link_to t('markdown.posts.index.title'), { action: 'index' } %></li>
<% end %>

<div class="breadcrumb has-succeeds-separator">
  <ul>
    <% @post.paths.each do |catalog| %>
      <li><%= link_to catalog.name, { action: 'list', catalog_path: catalog.path } %></li>
    <% end %>
    <% if @post.catalog_path.present? %>
      <li><%= link_to @post.catalog.name, { action: 'list', catalog_path: @post.catalog_path } %></li>
    <% end %>
    <li class="is-active"><%= @post.title %></li>
  </ul>
</div>

<td>
  <p>
  <% if model.ppt %>
    <%= link_to(action: 'ppt', path: model.path) do %>
      <span><%= model.title %></span>
      <i class="fa-light fa-clapperboard-play has-text-grey-dark"></i>
    <% end %>
  <% else %>
    <%= link_to model.title, { action: 'show', path: model.path } %>
  <% end %>
  </p>
  <p class="has-text-grey"><time data-controller="time"><%= model.updated_at.to_fs(:iso8601) %></time></p>
</td>

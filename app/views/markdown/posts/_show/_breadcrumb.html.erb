<div class="breadcrumb has-succeeds-separator">
  <ul>
    <li><%= link_to t('markdown.posts.index.title'), { action: 'index' } %></li>
    <% @post.catalog.ancestors.each do |catalog| %>
      <li><%= link_to catalog.name, { action: 'index', catalog_path: catalog.path } %></li>
    <% end %>
    <% if @post.catalog_path.present? %>
      <li><%= link_to @post.catalog.name, { action: 'index', catalog_path: @post.catalog_path } %></li>
    <% end %>
    <li class="is-active"><%= @post.title %></li>
  </ul>
</div>

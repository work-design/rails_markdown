<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide" data-url="<%= url_for({ action: 'reorder', id: model.id }) %>" data-id="<%= model.id %>">
  <%= yield %>
  <td>
    <div data-show-target="item" class="visibility-hidden">
      <%= link_to({ controller: 'posts', catalog_path: model.path, git_id: model.git_id }, aria: { label: t('markdown.admin.posts.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-newspaper has-text-warning-dark"></i>
      <% end %>
      <%= link_to({ controller: 'assets', catalog_path: model.path, git_id: model.git_id }, aria: { label: t('markdown.admin.assets.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-images has-text-success"></i>
      <% end %>
      <%= link_to({ action: 'show', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-circle-info has-text-info"></i>
      <% end %>
      <%= link_to({ action: 'edit', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil has-text-link"></i>
      <% end %>
      <%= button_to({ action: 'destroy', id: model.id }, method: :delete, data: { confirm: t('.confirm') }, aria: { label: t('.destroy.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-trash has-text-danger"></i>
      <% end %>
    </div>
  </td>
</tr>

<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" class="visibility-hidden">
      <%= button_to({ action: 'show', id: model.id }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-circle-info color-info"></i>
      <% end %>
      <%= button_to({ action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil color-link"></i>
      <% end %>
      <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, data: { confirm: t('.destroy.confirm') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-trash color-danger"></i>
      <% end %>
    </div>
    <div data-show-target="item" class="visibility-hidden">
      <%= link_to({ controller: 'catalogs', git_id: model.id }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-folder-tree color-primary"></i>
        <span class="ml-1"><%= t('.catalogs.index.title') %></span>
      <% end %>
      <%= link_to({ controller: 'posts', git_id: model.id }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-newspaper has-text-warning-dark"></i>
        <span class="ml-1"><%= t('.posts.index.title') %></span>
      <% end %>
      <%= link_to({ controller: 'assets', git_id: model.id }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-images color-success"></i>
        <span class="ml-1"><%= t('.assets.index.title') %></span>
      <% end %>
    </div>
  </td>
</tr>

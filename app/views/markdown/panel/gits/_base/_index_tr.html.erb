<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" class="visibility-hidden">
      <%= link_to({ controller: 'catalogs', git_id: model.id }, aria: { label: t('.catalogs.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-folder-tree has-text-primary"></i>
      <% end %>
      <%= link_to({ controller: 'posts', git_id: model.id }, aria: { label: t('.posts.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-newspaper has-text-warning-dark"></i>
      <% end %>
      <%= link_to({ controller: 'assets', git_id: model.id }, aria: { label: t('.assets.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-images has-text-success"></i>
      <% end %>
      <%= button_to({ action: 'show', id: model.id }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-circle-info has-text-info"></i>
      <% end %>
      <%= button_to({ action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil has-text-link"></i>
      <% end %>
      <%= button_to({ action: 'destroy', id: model.id }, method: :delete, data: { confirm: t('.confirm') }, aria: { label: t('.destroy.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-trash has-text-danger"></i>
      <% end %>
    </div>
  </td>
</tr>

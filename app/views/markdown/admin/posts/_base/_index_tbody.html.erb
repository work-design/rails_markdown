<td>
  <p>
    <%= link_to model.title, { controller: '/markdown/posts', action: 'raw', base_name: model.git.base_name, slug: model.slug }, target: '_blank', class: 'has-text-weight-bold' %>
  </p>
  <p class="color-grey"><%= model.path %></p>
</td>
<td>
  <p><%= model.layout %></p>
  <p><%= model.target %></p>
</td>
<td>
  <%= form_with theme: nil, model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :published, data: { input_target: 'checkbox' }, id: nil, class: 'switch is-rounded' %>
    <label data-action="click->input#check"></label>
  <% end %>
</td>
<td>
  <%= form_with theme: nil, model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :nav, data: { input_target: 'checkbox' }, id: nil, class: 'switch is-rounded' %>
    <label data-action="click->input#check"></label>
  <% end %>
</td>
<td>
  <time data-controller="time"><%= model.last_commit_at.to_fs(:iso8601) %></time>
</td>

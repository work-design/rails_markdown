<%= form_with theme: 'search', model: Markdown::Post.new, url: { action: params[:action] } do |f| %>
  <div class="field-body">
    <%= f.text_field :title %>
    <%= f.text_field 'path-rl' %>
    <div class="field is-narrow">
      <%= f.submit %>
      <%= link_to t('.clear'), filter_params(except: [:title, 'path-rl']), class: 'button is-light' %>
    </div>
  </div>
<% end %>

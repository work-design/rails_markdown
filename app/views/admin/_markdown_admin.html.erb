<div class="media">
  <figure class="media-left">
    <%# image_tag meta[0].logo, class: 'image is-64x64' if meta[0].logo.present? %>
  </figure>
  <div class="media-content">
    <div class="content">
      <strong><%= t('markdown.admin.title') %></strong>
    </div>
    <div data-empty-target="content">
      <%= link_to({ controller: 'markdown/admin/gits' }, class: 'tag') do %>
        <span><%= t('markdown.admin.gits.index.title') %></span>
      <% end %>
    </div>
  </div>
</div>
